@using MvcCv.Models.Entity
@model List<TblDeneyimler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h2> Deneyimlar Sayfası. </h2>

<div class="m-5"></div>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">İd</th>
            <th scope="col">Baslık</th>
            <th scope="col">Alt Baslık</th>
            <th scope="col">Açıklama</th>
            <th scope="col">Tarih</th>
            <th scope="col">Sil</th>
            <th scope="col">Düzenle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.ID</th>
                <td>@item.Baslık</td>
                <td>@item.AltBaslık</td>
                <td>@item.Aciklama</td>
                <td>@item.tarih</td>
                <td style="text-align:center">
                    <a href="/Deneyim/Deneyimsil/@item.ID" class="btn btn-danger ">Sil</a>

                </td>
                <td> <a href="/Deneyim/DeneyimGetir/@item.ID" class="btn btn-info ">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>

<div class="m-2" style="text-align:center">
    <a href="/Deneyim/DeneyimEkle/" class="btn btn-success m-3">Yeni Ekle</a>

</div>
